<Window x:Class="PadOS.Views.MainPanelEditor.MainPanelEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:customControls="clr-namespace:PadOS.CustomControls"
        xmlns:mainPanelEditor="clr-namespace:PadOS.Views.MainPanelEditor"
        Title="MainPanelEditor"
        Height="600"
        Width="1000"
        Style="{StaticResource DefaultWindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Border BorderThickness="3">
        <Border.Background>
            <LinearGradientBrush EndPoint="348,809" StartPoint="243.6,-40.45" MappingMode="Absolute">
                <GradientStop Color="#262626" Offset="1"/>
                <GradientStop Color="#202123" Offset="0.15"/>
                <GradientStop Color="#1e242f"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="1,1">
                <GradientStop Color="#1f4974"/>
                <GradientStop Color="#232424" Offset="0.5"/>
                <GradientStop Color="#1f4974" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="67*"/>
                <RowDefinition Height="527*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="288*"/>
                <ColumnDefinition Width="209*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="20,10,0,0" FontSize="18" FontFamily="Courier New" Text="PadOS" Foreground="#888" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <mainPanelEditor:ComboBox Margin="88,0,0,0" Grid.Row="0" Grid.Column="0" />
            <Grid Margin="10,0,0,10" Grid.Row="1" Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#161616" />
                        <GradientStop Color="#1f1f1f" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Viewbox HorizontalAlignment="Center" Width="440" Height="441" VerticalAlignment="Center" Margin="61,37">
                    <Grid Width="730" Height="730">
                        <Ellipse Fill="#333" Margin="0" />
                        <Ellipse Fill="#222" Margin="175"/>
                        <Grid x:Name="Highlight" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform x:Name="HighlightRotate" Angle="0"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Grid.RenderTransform>
                            <customControls:AlphaSilhouetteImage HorizontalAlignment="Left" Width="150" NormalColor="#FF285A8B" Source="/PadOS;component/Resources/main_panel_highlight.png" />
                        </Grid>
                        <Canvas x:Name="Canvas">
                            <Canvas.Resources>
                                <Style TargetType="customControls:AlphaSilhouetteImage">
                                    <Setter Property="Width"  Value="130" />
                                    <Setter Property="Height" Value="130" />
                                    <Setter Property="Margin" Value="-65,-65,0,0" />
                                    <Setter Property="NormalColor" Value="#FFEBF1F9" />
                                </Style>
                            </Canvas.Resources>
                            <customControls:AlphaSilhouetteImage Canvas.Left="365" Canvas.Top="95"  Source="/PadOS;component/Resources/Icons/capture.png" />
                            <customControls:AlphaSilhouetteImage Canvas.Left="556" Canvas.Top="174" Source="/PadOS;component/Resources/Icons/OSK.png" />
                            <customControls:AlphaSilhouetteImage Canvas.Left="635" Canvas.Top="365" Source="/PadOS;component/Resources/Icons/Cogs.png" />
                            <customControls:AlphaSilhouetteImage Canvas.Left="556" Canvas.Top="556" Source="/PadOS;component/Resources/Icons/OSK.png" />
                            <customControls:AlphaSilhouetteImage Canvas.Left="365" Canvas.Top="635" Source="/PadOS;component/Resources/Icons/capture.png" />
                            <customControls:AlphaSilhouetteImage Canvas.Left="174" Canvas.Top="556" Source="/PadOS;component/Resources/Icons/Loupe.png" />
                            <customControls:AlphaSilhouetteImage Canvas.Left="95"  Canvas.Top="365" Source="/PadOS;component/Resources/Icons/Cogs.png" />
                            <customControls:AlphaSilhouetteImage Canvas.Left="174" Canvas.Top="174" Source="/PadOS;component/Resources/Icons/OSK.png" />
                        </Canvas>
                    </Grid>
                </Viewbox>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <Border BorderThickness="2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0,-1" StartPoint="1,2">
                            <GradientStop Color="#4fff" Offset="0.00"/>
                            <GradientStop Color="#2fff" Offset="0.22"/>
                            <GradientStop Color="#4fff" Offset="0.37"/>
                            <GradientStop Color="#2fff" Offset="0.87"/>
                            <GradientStop Color="#4fff" Offset="0.95"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.45,0">
                            <GradientStop Color="#0fff" Offset="0"/>
                            <GradientStop Color="#6fff" Offset="0.5"/>
                            <GradientStop Color="#0fff" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <TextBlock FontFamily="Courier New" Text="Add new..." Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="0,-1" StartPoint="1,2">
                                    <GradientStop Color="#0fff" Offset="0"/>
                                    <GradientStop Color="#fff" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="BorderBrush" Value="White" />
                        <Setter Property="BorderThickness" Value="2" />
                    </Style>
                </Grid.Resources>
                <UniformGrid Columns="3" Rows="4" >
                    <Border>
                        <TextBlock FontFamily="Courier New" Text="Play" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" />
                    </Border>
                    <Border>
                        <TextBlock FontFamily="Courier New" Text="Play" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" />
                    </Border>
                    <Border>
                        <TextBlock FontFamily="Courier New" Text="Play" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" />
                    </Border>
                    <Border>
                        <TextBlock FontFamily="Courier New" Text="Play" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" />
                    </Border>
                    <Border>
                        <TextBlock FontFamily="Courier New" Text="Play" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" />
                    </Border>
                    <Border>
                        <TextBlock FontFamily="Courier New" Text="Play" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" />
                    </Border>
                </UniformGrid>
            </Grid>
        </Grid>
    </Border>
</Window>
