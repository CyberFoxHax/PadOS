<Border x:Class="PadOS.Views.Settings.NavItem"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:customControls="clr-namespace:PadOS.CustomControls"
    Background="#222325"
    x:Name="This"
    BorderThickness="1"
    BorderBrush="#33363c">
    <Border.Style>
        <Style TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive, ElementName=This}">
                    <Setter Property="Background" Value="#253a48"></Setter>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Background" Value="#222325"></Setter>
            <Setter Property="Width"  Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="7" />
        </Style>
    </Border.Style>
    <customControls:AlphaSilhouetteImage Source="{Binding ImageSource, ElementName=This}" NormalColor="#5a5d64" ActiveColor="#669fc7" />
</Border>