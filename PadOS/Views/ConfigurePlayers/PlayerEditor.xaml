<Window x:Class="PadOS.Views.ConfigurePlayers.PlayerEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:configurePlayers="clr-namespace:PadOS.Views.ConfigurePlayers"
        Title="PlayerEditor" Height="501" Width="1333" Background="#14141e">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <configurePlayers:ControllerTemplate Grid.Column="0" Grid.Row="1" />
        <configurePlayers:ControllerTemplate Grid.Column="1" Grid.Row="1" />
        <configurePlayers:ControllerTemplate Grid.Column="2" Grid.Row="1" />
        <configurePlayers:ControllerTemplate Grid.Column="3" Grid.Row="1" />
    </Grid>
</Window>
